<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <!--
        Base application theme for API 21+. This theme completely replaces
        MyTheme from BOTH res/values/styles.xml on API 21+ devices.
    -->
  <style name="MyTheme" parent="MyTheme.Base">
   <item name="android:windowContentTransitions">true</item>
    <item name="android:windowAllowEnterTransitionOverlap">true</item>
    <item name="android:windowAllowReturnTransitionOverlap">true</item>
    <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
    <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
  </style>

  <style name="Button.BaseStyle" parent="android:style/Widget.Button">
    <item name="android:background">@drawable/baseButtonStyle</item>
    <item name="android:textSize">16dp</item>
    <item name="android:textColor">#ffffff</item>
  </style>

  <style name="Button.BaseWhiteStyle" parent="android:style/Widget.Button">
    <item name="android:background">@drawable/baseButtonWhiteStyle</item>
    <item name="android:textSize">16dp</item>
    <item name="android:textColor">@color/buttonBlue</item>
  </style>

  <style name="Button.FacebookStyle" parent="android:style/Widget.Button">
    <item name="android:background">@drawable/facebookButtonStyle</item>
    <item name="android:textSize">16dp</item>
    <item name="android:textColor">#ffffff</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="View.AuthPageStyle" parent="android:style/Widget.Button">
    <item name="android:background">@drawable/authPageStyle</item>
  </style>

  <style name="EditText.BaseStyle" parent="android:style/Widget.EditText">
    <item name="android:background">@drawable/baseEditViewStyle</item>
    <item name="android:textSize">22dp</item>
    <item name="android:textColor">#FFFFFF</item>
    <item name="android:layout_height">50dp</item>
    <item name="android:paddingLeft">10dp</item>
  </style>

</resources>
